set term postscript color enhanced
set grid
set xlabel 'x'
set ylabel 'hat x'
set output 'xhat.ps'
plot [-32:32] x >= 16? x-32: x< -16?x+32:x t 'x periodic', 0.5*32*sin(2.0*3.1415*x/32)/3.1415 t 'x hat'

set xlabel 'x'
set ylabel 'bar x^2'
set output 'xbar2.ps'
plot [-32:32] x >= 16? (x-32)**2: x< -16?(x+32)**2:x**2 t 'x^2 periodic', (32*sin(3.1415*x/32)/3.1415)**2 t 'xbar^2'
